{
	"name": "vue-boilerplate",
	"version": "1.0.0",
	"description": "A simple boilerplate for creating Vue applications.",
	"author": {
		"name": "Miloš Milanović",
		"email": "mmilanovic016@gmail.com"
	},
	"license": "LGPL-3.0-or-later",
	"scripts": {
		"clean": "rm -rf dist/*",
		"format": "prettier --write src/**/*.{js,jsx,css,json} *.{js,json}",
		"build:dev": "webpack --env dev --progress",
		"build:prod": "webpack --progress",
		"build:stats": "webpack --progress --profile --json > stats.json"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mmilanovic4/vue-boilerplate.git"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/preset-env": "^7.12.7",
		"babel-loader": "^8.2.2",
		"copy-webpack-plugin": "^6.3.2",
		"css-loader": "^5.0.1",
		"css-minimizer-webpack-plugin": "^1.1.5",
		"mini-css-extract-plugin": "^1.3.2",
		"prettier": "^2.2.1",
		"style-loader": "^2.0.0",
		"terser-webpack-plugin": "^5.0.3",
		"vue": "^2.6.12",
		"vue-loader": "^15.9.5",
		"vue-template-compiler": "^2.6.12",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	}
}
